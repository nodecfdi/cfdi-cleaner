{
    "name": "@nodecfdi/cfdi-cleaner",
    "version": "1.3.0",
    "description": "Librer√≠a para limpiar comprobantes fiscales digitales v3.3 y v4.0",
    "keywords": [
        "cfdi",
        "SAT",
        "CFDI",
        "xml",
        "clean"
    ],
    "private": false,
    "author": "OcelotlStudio <contacto@ocelotlstudio.com>",
    "license": "MIT",
    "type": "module",
    "main": "dist/cfdi-cleaner.js",
    "module": "dist/cfdi-cleaner.mjs",
    "unpkg": "dist/cfdi-cleaner.global.js",
    "browser": "dist/cfdi-cleaner.global.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "browser": {
                "default": "./dist/cfdi-cleaner.global.js"
            },
            "import": "./dist/cfdi-cleaner.mjs",
            "require": "./dist/cfdi-cleaner.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "prepare": "is-ci || husky install",
        "lint": "eslint --fix --ext .js,.ts .",
        "lint:check": "eslint --ext .js,.ts .",
        "format": "prettier --write \"**/*.{js,ts,json}\"",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "build": "pnpm prebuild && rollup -c && pnpm gen:types && rimraf dist/dts",
        "prebuild": "rimraf dist",
        "gen:docs": "rimraf docs && typedoc --options typedoc.json",
        "gen:types": "api-extractor run --local",
        "release": "pnpm run build && pnpm changeset publish"
    },
    "repository": "https://github.com/nodecfdi/cfdi-cleaner",
    "bugs": {
        "url": "https://github.com/nodecfdi/cfdi-cleaner/issues"
    },
    "homepage": "https://github.com/nodecfdi/cfdi-cleaner",
    "devDependencies": {
        "@changesets/cli": "^2.26.0",
        "@commitlint/cli": "^17.4.2",
        "@microsoft/api-extractor": "^7.33.7",
        "@nrsk/config-conventional": "^1.0.0",
        "@rollup/plugin-commonjs": "^24.0.0",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-terser": "^0.3.0",
        "@rollup/plugin-typescript": "^11.0.0",
        "@types/is-ci": "^3.0.0",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.48.2",
        "@typescript-eslint/parser": "^5.48.2",
        "@vitest/coverage-istanbul": "^0.27.2",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-config-xo": "^0.43.1",
        "eslint-config-xo-typescript": "^0.55.1",
        "eslint-plugin-tsdoc": "^0.2.17",
        "eslint-plugin-unicorn": "^45.0.2",
        "husky": "^8.0.3",
        "is-ci": "^3.0.1",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.3",
        "rimraf": "^4.1.1",
        "rollup": "^3.10.0",
        "ts-mixer": "^6.0.2",
        "typedoc": "^0.23.24",
        "typedoc-theme-hierarchy": "^3.0.2",
        "typescript": "^4.9.4",
        "vite": "^4.0.4",
        "vitest": "^0.27.2",
        "xpath": "^0.0.32"
    },
    "dependencies": {
        "@nodecfdi/cfdiutils-common": "^1.2.3"
    },
    "commitlint": {
        "extends": [
            "@nrsk/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{js,ts,json}": [
            "prettier --write"
        ],
        "*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "engines": {
        "node": ">= 14.16.0"
    },
    "browserslist": [
        "defaults",
        "not IE 11"
    ]
}
